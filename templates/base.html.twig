<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/png" href="{{ asset('img/logo.png') }}">

        <title>{% block title %}Rencontres{% endblock %}</title>

        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
        {% endblock %}

        {% block javascripts %}

        {% endblock %}
    </head>
    <body>
    <header>
        {% if app.user %}
        <nav class="navbar navbar-light bg-light">
            <div class="container">
                <nav class="navbar-brand">
                    <div class="container-fluid">
                        <span class="icon mr-2"><i class="far fa-heart" ></i></span>
                        <a class="navbar-brand mb-0 h1" href="{{ path('main_home') }}">LoveBirds</a>
                        <span class="icon mr-2"><i class="fas fa-id-badge"></i></span>
                        <a class="navbar-brand justify-content-center " href="{{ path('user_profil') }}">Mon Profil</a>

                    </div>

                    {% else %}
                    <nav class="navbar navbar-light bg-light">
                        <div class="container">
                            <nav class="navbar-brand">
                                <div class="container-fluid">
                                    <span class="icon mr-1"><i class="far fa-heart" ></i></span>
                                    <a class="navbar-brand mb-0 h1" href="{{ path('main_home') }}">LoveBirds</a>
                                </div>{% endif %}
                </nav>

                {% if app.user %}
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="btn btn-outline-danger me-2" href="{{ path('app_logout') }}">Deconnexion</a>
                    </div>
                </nav>
                {% else %}
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="btn btn-outline-danger me-2" href="{{ path('app_login') }}">Connexion</a>
                        <a class="btn btn-danger" href="{{ path('app_register') }}">S'inscrire</a>
                    </div>
                </nav>
                {% endif %}
            </div>
        </nav>
    </header>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <main>

        {% block body %}

        {% endblock %}

    </main>




    <footer>
        <nav class="navbar fixed-bottom navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <span class="icon mr-1"><i class="far fa-heart" ></i></span>
                <a class="navbar-brand" href="{{ path('main_home') }}">&copy; Bucket-List {{ "now"|date("Y") }}</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('main_cgu') }}">CGU</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('main_mentions-legales') }}">Mentions l√©gales</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </footer>

    </body>
</html>
